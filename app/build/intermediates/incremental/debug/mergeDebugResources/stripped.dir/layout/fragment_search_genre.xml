<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seach_found_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.seachFragment.SeachFoundFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/strelkaNazad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:gravity="left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/strelka_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="140dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:text="Жанр"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/seach"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/seach_icon"
                android:onClick="onSearchClick"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Введите жанр"/>

        </LinearLayout>


        <TextView
            android:id="@+id/genre1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Комедия"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/genre2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Мелодрама"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginStart="50dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/genre3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Боевик"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginStart="50dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/genre4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Вестерн"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginStart="50dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/genre5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Драма"
            android:textSize="16dp"
            android:clickable="true"
            android:layout_marginStart="50dp"
            android:textColor="@color/black" />

    </LinearLayout>
</FrameLayout>