<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ScrollView
        android:id="@+id/homepageFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.homepageFragment.HomepageFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/skillcinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="left"
                android:text="Skillcinema"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dramaFrance"
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:text="Драмы Франции"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/vse_dramaFrance"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/button_vse" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dramas_france"
                android:name="com.example.skillcinema.presentation.HomepageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                tools:context=".presentation.homepageFragment.HomepageFragment"
                tools:ignore="SpeakableTextPresentCheck"
                tools:listitem="@layout/homepage_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/premier"
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:text="Премьеры"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/vse_premier"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/button_vse" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/premieres"
                android:name="com.example.skillcinema.presentation.HomepageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".presentation.homepageFragment.HomepageFragment"
                tools:ignore="SpeakableTextPresentCheck"
                tools:listitem="@layout/homepage_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/populars"
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:text="Популярное"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/vse_populars"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/button_vse" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular"
                android:name="com.example.skillcinema.presentation.HomepageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                tools:context=".presentation.homepageFragment.HomepageFragment"
                tools:ignore="SpeakableTextPresentCheck"
                tools:listitem="@layout/homepage_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/us_militant"
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:text="Боевики США"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/vse_us_militant"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/button_vse" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/us_militants"
                android:name="com.example.skillcinema.presentation.HomepageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                tools:context=".presentation.homepageFragment.HomepageFragment"
                tools:ignore="SpeakableTextPresentCheck"
                tools:listitem="@layout/homepage_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/top"
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:text="Топ-250"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/vse_top"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/button_vse" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top250"
                android:name="com.example.skillcinema.presentation.HomepageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                tools:context=".presentation.homepageFragment.HomepageFragment"
                tools:ignore="SpeakableTextPresentCheck"
                tools:listitem="@layout/homepage_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/serial"
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:text="Сериалы"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/vse_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/button_vse" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/serials"
                android:name="com.example.skillcinema.presentation.HomepageFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                tools:context=".presentation.homepageFragment.HomepageFragment"
                tools:ignore="SpeakableTextPresentCheck"
                tools:listitem="@layout/homepage_item" />


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></ProgressBar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="800dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageHome"
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/home" />
            <ImageView
                android:id="@+id/imagePoisk"
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/poisk" />
            <ImageView
                android:id="@+id/imageContact"
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/contact" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>


