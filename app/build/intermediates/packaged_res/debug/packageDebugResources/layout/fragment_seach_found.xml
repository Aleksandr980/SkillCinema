<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seach_found_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.seachFragment.SeachFoundFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/strelkaNazad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:gravity="left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/strelka_left" />

            <TextView
                android:id="@+id/settingSearch"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:text="Настройка поиска"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Показывать" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/bottoms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vse_bn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/left_bg_indigo_white"
                android:clickable="true"
                android:text="Все"
                android:textColor="@drawable/white_black"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/films_bn"
                android:layout_width="152dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/centr_bg_white_indigo"
                android:clickable="true"
                android:text="Фильмы"
                android:textColor="@drawable/black_white"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/serials_bn"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/right_bg_white_indigo"
                android:clickable="true"
                android:text="Сериалы"
                android:textColor="@drawable/black_white"
                android:textSize="18dp"/>
        </LinearLayout>

